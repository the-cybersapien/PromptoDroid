<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey850"
    tools:context="xyz.cybersapien.promptodroid.ui.fragment.PromptEditFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin">

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/title_field_boxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                app:enabled="false"
                app:labelText="Title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/title_extended_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    tools:text="Title" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <TextView
                android:id="@+id/prompt_date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/title_field_boxes"
                app:layout_constraintTop_toBottomOf="@id/title_field_boxes"
                tools:text="Nov. 27, 2018" />

            <TextView
                android:id="@+id/prompt_word_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/prompt_date_view"
                app:layout_constraintLeft_toLeftOf="@id/title_field_boxes"
                app:layout_constraintTop_toBottomOf="@id/title_field_boxes"
                app:layout_constraintTop_toTopOf="@id/prompt_date_view"
                tools:text="237 words" />

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/story_text_field_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                app:enabled="false"
                app:labelText="Story"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prompt_word_count_view">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/story_extended_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:minHeight="300dp"
                    tools:text="@string/lorem_ipsum" />
            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:src="@drawable/ic_play"
        app:fabSize="normal" />

</android.support.design.widget.CoordinatorLayout>
